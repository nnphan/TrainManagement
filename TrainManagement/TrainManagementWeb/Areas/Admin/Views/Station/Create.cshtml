@model TrainManagementWeb.Models.ViewModel.CreateStationModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-page">
    <div class="content">

        <!-- Start Content-->
        <div class="container-fluid">

            <!-- start page title -->
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box">
                        <div class="page-title-right">
                        </div>
                        <h4 class="page-title">Add new Station</h4>
                    </div>
                </div>
            </div>
            <!-- end page title -->

            <div class="row">
                <div class="col-12">
                    <div class="card-box">

                        <div class="row">
                            <div class="col-12">
                                <div class="p-2">
                                    @using (Html.BeginForm("Create", "Station", FormMethod.Post, new { @class = "form-horizontal", @role = "form" }))
                                    {
                                        @Html.ValidationSummary(false, "", new { @class = "text-danger" });
                                        <div class="form-group row">
                                            <label class="col-sm-2 col-form-label" for="simpleinput">Station Name</label>
                                            <div class="col-sm-10">
                                                @Html.TextBoxFor(model => model.StationName, new { @class = "form-control", @id = "simpleinput", @placeholder = "Station name", @autofocus = "autofocus", @type = "text" })
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-sm-2 col-form-label" for="example-email">Station Code</label>
                                            <div class="col-sm-10">
                                                @Html.TextBoxFor(model => model.StationCode, new { @class = "form-control", @id = "simpleinput", @placeholder = "Station code", @type = "text" })

                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-sm-2 col-form-label" for="example-email">Railway Division Name</label>
                                            <div class="col-sm-10">
                                                @Html.TextBoxFor(model => model.RailwayDivisionName, new { @class = "form-control", @id = "simpleinput", @placeholder = "Railway Division Name", @type = "text" })
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-sm-2 col-form-label" for="example-email">Position</label>
                                            <div class="col-sm-10">
                                                @Html.TextBoxFor(model => model.PositionDistance, new { @class = "form-control", @id = "simpleinput", @placeholder = "Position Distance", @type = "text" })
                                            </div>
                                        </div>
                                        <button type="submit" style="text-align: right" class="btn btn-primary">Create</button>
                                    }
                                </div>
                            </div>

                        </div>
                        <!-- end row -->

                    </div> <!-- end card-box -->
                </div><!-- end col -->
            </div>
            <!-- end row -->

        </div> <!-- container -->

    </div> <!-- content -->


</div>


