@model TrainManagementWeb.Models.ViewModel.RuleViewModel

@{
    ViewBag.Title = "Detail";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-page">
    <div class="content">

        <!-- Start Content-->
        <div class="container-fluid">

            <!-- start page title -->
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box">
                        <div class="page-title-right">

                        </div>
                        <h4 class="page-title">Add new User</h4>
                    </div>
                </div>
            </div>
            <!-- end page title -->

            <div class="row">
                <div class="col-12">
                    <div class="card-box">

                        <div class="row">
                            <div class="col-12">
                                <div class="p-2">
                                    @using (Html.BeginForm("UpdateRule", "Rule", FormMethod.Post, new { @class = "form-horizontal", @role = "form" }))
                                    {
                                        @Html.ValidationSummary(false, "", new { @class = "text-danger" });
                                        <div class="form-group row">
                                            <label class="col-sm-2 col-form-label" for="simpleinput">Rule Distance Value</label>
                                            <div class="col-sm-10">
                                                @Html.TextBoxFor(model => model.RuleDistanceValue, new { @class = "form-control", @id = "simpleinput", @placeholder = "Station name", @autofocus = "autofocus", @type = "text" })
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-sm-2 col-form-label" for="example-email">Rule Cancel Value</label>
                                            <div class="col-sm-10">
                                                @Html.TextBoxFor(model => model.RuleCancelValue, new { @class = "form-control", @id = "simpleinput", @placeholder = "Station code", @type = "text" })
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-sm-2 col-form-label" for="example-email">Rule AC Coach Value</label>
                                            <div class="col-sm-10">
                                                @Html.TextBoxFor(model => model.RuleClass1Value, new { @class = "form-control", @id = "simpleinput", @placeholder = "Station code", @type = "text" })
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-sm-2 col-form-label" for="example-email">Rule First Class Coach</label>
                                            <div class="col-sm-10">
                                                @Html.TextBoxFor(model => model.RuleClass2Value, new { @class = "form-control", @id = "simpleinput", @placeholder = "Position Distance", @type = "text" })
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-sm-2 col-form-label" for="example-email">Rule Sleeper Class Coach Value</label>
                                            <div class="col-sm-10">
                                                @Html.TextBoxFor(model => model.RuleClass3Value, new { @class = "form-control", @id = "simpleinput", @placeholder = "Position Distance", @type = "text" })
                                            </div>
                                        </div>

                                        <button type="submit" class="btn btn-primary">Edit</button>
                                    }
                                </div>
                            </div>

                        </div>
                        <!-- end row -->

                    </div> <!-- end card-box -->
                </div><!-- end col -->
            </div>
            <!-- end row -->

        </div> <!-- container -->

    </div> <!-- content -->


</div>

