@model List<TrainManagementWeb.Models.EF.tblUser>
@using TrainManagementWeb.Common;
@{
    ViewBag.Title = "List";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-page">
    <div class="content">

        <!-- Start Content-->
        <div class="container-fluid">

            <!-- start page title -->
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box">                       
                        <h4 class="page-title">User List</h4>
                    </div>
                </div>
            </div>
            <!-- end page title -->


            <div class="row">
                <div class="col-sm-12">
                    <div class="card-box">
                        <div class="mb-2">
                            <div class="row">
                                <div class="col-12 text-sm-center form-inline">
                                    <div class="form-group mr-2">
                                        <a href='@Url.Action("Create", "User")'>
                                            <button class="btn btn-primary"><i class="mdi mdi-plus-circle mr-2"></i> Add New User</button>
                                        </a>

                                    </div>

                                    <div class="form-group">
                                        <input id="demo-input-search2" type="text" placeholder="Search" class="form-control" autocomplete="off">
                                    </div>
                                </div>
                            </div>
                        </div>

                        <table id="demo-foo-addrow" class="table table-centered table-striped table-bordered mb-0 toggle-circle" data-page-size="7">
                            <thead>
                                <tr>
                                    <th data-sort-ignore="true" class="min-width"></th>
                                    <th data-sort-initial="true" data-toggle="true">User Name</th>
                                    <th>Email</th>
                                    <th data-hide="phone">Phone Number</th>
                                    <th data-hide="phone, tablet">Role</th>
                                </tr>

                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr id="row_@item.Id"@*, onclick="location.href = '@Url.Action("Edit", "User", new { id=item.Id })'"*@>
                                        <td class="text-center">
                                            @*@Ajax.RawActionLink(string.Format("<button class='demo-delete-row btn btn-danger btn-xs btn-icon'><i class='fa fa-times'></i></button>"), "Delete", "User", new { @id = item.Id }, new AjaxOptions
                                               {
                                                   Confirm = "Bạn có muốn xoá bản ghi này?",
                                                   OnComplete = "$('#row_" + @item.Id + "').remove()",
                                                   HttpMethod = "Delete"
                                               },
                                                new { })*@

                                            <div style="margin:2px">
                                                @Ajax.RawActionLink(string.Format("<button class='demo-delete-row btn btn-danger btn-xs btn-icon'><i class='fa fa-times'></i></button>"), "Delete", "User", new { @id = item.Id }, new AjaxOptions
                                               {
                                                   Confirm = "Bạn có muốn xoá bản ghi này?",
                                                   OnComplete = "$('#row_" + @item.Id + "').remove()",
                                                   HttpMethod = "Delete"
                                               },
                                                new { })
                                            </div>

                                            <div style="margin:2px">
                                                <a href="/Admin/User/Edit/@item.Id">
                                                    <button class='btn btn-primary btn-xs btn-icon'><i class='mdi mdi-pencil'></i></button>
                                                </a>
                                            </div>
                                        </td>
                                        <td>@item.UserName</td>
                                        <td>@item.EmailAddress</td>
                                        <td>@item.PhoneNumber</td>
                                        @if (@item.RoleId == 1)
                                        {
                                            <td>ADMIN</td>
                                        }
                                        else
                                        {
                                            <td>USER</td>
                                        }                                   
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr class="active">
                                    <td colspan="6">
                                        <div class="text-right">
                                            <ul class="pagination pagination-split justify-content-end footable-pagination m-t-10"></ul>
                                        </div>
                                    </td>
                                </tr>
                            </tfoot>
                        </table>
                    </div> <!-- end card-box -->
                </div> <!-- end col -->
            </div>
            <!-- end row -->

        </div> <!-- container -->

    </div> <!-- content -->


</div>

