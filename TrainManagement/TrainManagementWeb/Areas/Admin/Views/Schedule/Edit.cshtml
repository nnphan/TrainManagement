@model TrainManagementWeb.Models.ViewModel.TrainScheduleViewModel
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-page">
    <div class="content">

        <!-- Start Content-->
        <div class="container-fluid">

            <!-- start page title -->
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box">
                        <div class="page-title-right">
                        </div>
                        <h4 class="page-title">Add Schedule</h4>
                    </div>
                </div>
            </div>
            <!-- end page title -->

            <div class="row">
                <div class="col-12">
                    <div class="card-box">

                        <div class="row">
                            <div class="col-12">
                                <div class="p-2">
                                    @using (Html.BeginForm("Edit", "Schedule", FormMethod.Post, new { @class = "form-horizontal", @role = "form" }))
                                    {
                                        @Html.ValidationSummary(false, "", new { @class = "text-danger" });
                                        <div class="form-row">
                                            <div class="form-group col-md-6">
                                                <label for="inputEmail4" class="col-form-label">Train</label>
                                                <input type="text" class="form-control" disabled="" value=@ViewBag.TrainCode>
                                            </div>
                                            <div class="form-group col-md-6" style="display:none">
                                                <label for="inputEmail4" class="col-form-label">Train</label>
                                                @*<input type="text" class="form-control" disabled="" value= @ViewBag.TrainId placeholder=@ViewBag.TrainCode>*@
                                                @Html.TextBoxFor(model => model.TrainId, new { @class = "form-control", @id = "simpleinput", @placeholder = @ViewBag.TrainCode, @Value = @ViewBag.TrainId })
                                            </div>

                                        </div>

                                        <div class="form-row">
                                            <div class="form-group col-md-6">
                                                <label for="inputEmail4" class="col-form-label">Station </label>
                                                @Html.DropDownListFor(x => x.StationId, null, new { @class = "form-control" })
                                            </div>

                                        </div>

                                        <div class="form-row">
                                            <div class="form-group col-md-6">
                                                <label>Auto close</label>
                                                <div class="input-group">
                                                    @Html.TextBoxFor(model => model.DepartureDate, new { @class = "form-control", @data_provide = "datepicker", @data_date_autoclose = "true", @data_date_format = "dd/mm/yyyy" })
                                                    <div class="input-group-append">
                                                        <span class="input-group-text"><i class="ti-calendar"></i></span>
                                                    </div>
                                                </div><!-- input-group -->
                                            </div>
                                            <div class="form-group col-md-6">
                                                <label>Auto close</label>
                                                <div class="input-group clockpicker" data-placement="top" data-align="top" data-autoclose="true">
                                                    @Html.TextBoxFor(model => model.DepartureTime, new { @class = "form-control", @type = "text", @value = "13:14" })
                                                    @*<input type="text" class="form-control" value="13:14">*@
                                                    <div class="input-group-append">
                                                        <span class="input-group-text"><i class="mdi mdi-clock-outline"></i></span>
                                                    </div>
                                                </div>
                                            </div>

                                        </div>

                                        <script type="text/javascript">
                                            $('.clockpicker').clockpicker();
                                        </script>

                                        <button type="submit" style="text-align: right" class="btn btn-primary">Edit</button>
                                    }
                                </div>
                            </div>

                        </div>
                        <!-- end row -->

                    </div> <!-- end card-box -->
                </div><!-- end col -->
            </div>
            <!-- end row -->

        </div> <!-- container -->

    </div> <!-- content -->


</div>

