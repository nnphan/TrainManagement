@model List<TrainManagementWeb.Models.ViewModel.CartItem>
@{
    ViewBag.Title = "CartDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="colorlib-wrap">
    <div class="container">
        <div class="row">
            <div class="col-md-9">
                <div class="row">
                    <div class="col-md-12">
                        <div class="wrap-division">
                            <div class="col-md-12 col-md-offset-0 heading2 animate-box">
                                <h2>Booking Cart</h2>
                            </div>
                            @if (Model.Count > 0)
                            {
                        <div class="row">

                            <table class="table">
                                <thead>
                                    <tr>
                                        <td>Train Code</td>
                                        <td>Route</td>
                                        <td>Departure Time</td>
                                        <td>Departure Date</td>
                                        <td>Price</td>
                                        <td>Quantity</td>
                                        <td>Total</td>
                                        <td></td>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.BookingTrain.trainCode</td>
                                            <td>@item.BookingTrain.depStation - @item.BookingTrain.arStation</td>
                                            <td>@item.BookingTrain.depTime</td>
                                            <td>@item.BookingTrain.deDay</td>
                                            <td>@item.BookingTrain.price.ToString("N0")</td>
                                            <td><input type="text" class="txtQuantity" data-id="@item.BookingTrain.trainCode" value="@item.Quantity" /></td>
                                            <td>@((item.BookingTrain.price * item.Quantity).ToString("N0"))</td>
                                            <td><a href="#" data-id="" class="btn-delete">Xoá</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>

                            <button id="btnContinue" class="btn">Continue Booking</button>
                            <button id="btnUpdate" class="btn">Update Cart</button>
                            <button id="btnDeleteAll" class="btn">Delete Cart</button>
                            <a href="/Cart/Payment">
                                <button id="btnPayment" class="btn">Check out</button>
                            </a>
                            


                        </div>
                            }
                            else
                            {
                                <span class="alert alert-danger">No Item in Cart</span>
                            }

                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

