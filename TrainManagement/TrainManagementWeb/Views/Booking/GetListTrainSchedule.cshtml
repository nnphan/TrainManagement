@model  List<TrainManagementWeb.Models.EF.sp_GetTrainSchedule_Result>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="colorlib-wrap">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="wrap-division">
                            <div class="col-md-4 col-sm-4 animate-box">
                                <div class="hotel-entry">
                                    <a href="/Booking/Detail/?trainCode=@item.Train&departureStationName=@item.DepartureStation&arrivalStationName=@item.ArrivalStation&departureDate=@item.DepartureDate.ToString("MM/dd/yyyy")" class="hotel-img" style="background-image: url(/Assets/Client/images/Train/train_icon.png);">
                                        <p class="price"><span>$120</span><small> /ticket</small></p>
                                    </a>
                                    <div class="desc">
                                        <p class="star"><span><i class="icon-star-full"></i><i class="icon-star-full"></i><i class="icon-star-full"></i><i class="icon-star-full"></i><i class="icon-star-full"></i></span> </p>
                                        <h3><a href="/Booking/Detail/?train=@item.Train&departureStationName=@item.DepartureStation&arrivalStationName=@item.ArrivalStation&departureDate=@item.DepartureDate.ToString("MM/dd/yyyy")">@item.Train</a></h3>
                                        <span class="place">@item.DepartureStation - @item.ArrivalStation</span>
                                        <span class="place">Departure Day: @item.DepartureDate </span>
                                        <span class="place">Departure time: @item.DepartureTime </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }


                </div>
                @*<div class="row">
                    <div class="col-md-12 text-center">
                        <ul class="pagination">
                            <li class="disabled"><a href="#">&laquo;</a></li>
                            <li class="active"><a href="#">1</a></li>
