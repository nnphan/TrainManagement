@model  TrainManagementWeb.Models.ViewModel.TrainBookingViewModel
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section jsFooter{

    <script src="~/Assets/Client/js/CartController.js"></script>
}
<div class="colorlib-wrap">
    <div class="container">
        <div class="row">
            <div class="col-md-9">
                <div class="row">
                    <div class="col-md-12">
                        <div class="wrap-division">
                            <div class="col-md-12 col-md-offset-0 heading2 animate-box">
                                <h2>@Model.TrainCode</h2>
                                <p class="price">Route : @Model.Departure - @Model.Arrival</p>
                                <p class="price">Departure Date : @Model.DepartureDate</p>
                                <p class="price">Departure Time : @Model.DepartureTime</p>

                            </div>
                            @{ var url = "/Cart/AddItem?trainCode=" + @Model.TrainCode + "&depStation=" + @Model.Departure + "&arStation=" + Model.Arrival + "&deDay=" + Model.DepartureDate + "&depTime=" + Model.DepartureTime;
                            }
                            <div class="row">
                                <div class="col-md-12 animate-box">
                                    <div class="room-wrap">
                                        <div class="row">
                                            <div class="col-md-6 col-sm-6">
                                                <div class="room-img" style="background-image: url(/Assets/Client/images/Train/trainseat1.jpg);"></div>
                                            </div>
                                            <div class="col-md-6 col-sm-6">
                                                <div class="desc">
                                                    <h2>AC Coaches Class</h2>
                                                    <p class="price"><span>@Model.SeatPrice1.ToString("N0")</span> <small>/ seat</small></p>
                                                    <p class="price">Seat Available : @Model.Seat1Available</p>
                                                    <p><a href="@url&price=@Model.SeatPrice1&classSeat=AC Coaches Class" class="btn btn-primary">Book Now!</a></p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-12 animate-box">
                                    <div class="room-wrap">
                                        <div class="row">
                                            <div class="col-md-6 col-sm-6">
                                                <div class="room-img" style="background-image: url(/Assets/Client/images/Train/trainseat2.jpg);"></div>
                                            </div>
                                            <div class="col-md-6 col-sm-6">
                                                <div class="desc">
                                                    <h2>First Class Coaches</h2>
                                                    <p class="price"><span>@Model.SeatPrice2.ToString("N0")</span> <small>/ seat</small></p>
                                                    <p class="price">Seat Available : @Model.Seat2Available</p>
                                                    <p><a href="@url&price=@Model.SeatPrice2&classSeat=First Class Coaches" class="btn btn-primary">Book Now!</a></p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-12 animate-box">
                                    <div class="room-wrap">
                                        <div class="row">
                                            <div class="col-md-6 col-sm-6">
                                                <div class="room-img" style="background-image: url(/Assets/Client/images/Train/trainsleep.jpg);"></div>
                                            </div>
                                            <div class="col-md-6 col-sm-6">
                                                <div class="desc">
                                                    <h2>Sleeper Class Coaches</h2>
                                                    <p class="price"><span>@Model.SeatPrice3.ToString("N0")</span> <small>/ seat</small></p>
                                                    <p class="price">Seat Available : @Model.Seat3Available</p>
                                                    <p><a href="@url&price=@Model.SeatPrice3&classSeat=Sleeper Class Coaches" class="btn btn-primary">Book Now!</a></p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>


                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- SIDEBAR-->
            <div class="col-md-3">

            </div>
        </div>
    </div>
</div>

